<?xml version="1.0" encoding="utf-8"?>
<!-- We're using a LinearLayout to arrange views vertically. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F0F4C3"
    tools:context=".MainActivity">

    <!-- This TextView will display the quiz question. -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question text will appear here."
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:padding="8dp" />

    <!-- These three Buttons will be our answer options. -->
    <Button
        android:id="@+id/option1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Option 1"
        android:backgroundTint="#FFB74D"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <Button
        android:id="@+id/option2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Option 2"
        android:backgroundTint="#FFB74D"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <Button
        android:id="@+id/option3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Option 3"
        android:backgroundTint="#FFB74D"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <!-- This TextView will display the current score. -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:textColor="#333333" />

</LinearLayout>
